{
  "extends": "@tsconfig/node12/tsconfig.json",

        "target": "esnext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.js", "node_modules", "**/node_modules"]
}
